#!/usr/bin/env node

/**
 * @author Seena Rowhani
 * service.js
 * Runs job to scrape twitter activity and
 * insert values into sqlite3 db file.
 * @param  {[type]} Twitter, sqlite3
 * @return void
 */
(function(Twitter, sqlite3, utils, io) {
  'use strict';
  var p = utils.prompt();
  var socket = io.connect('http://localhost:80');
  var db = new sqlite3.Database('data/democracy.db');
  var client = new Twitter({
    consumer_key: process.env.TWITTER_CONSUMER_KEY,
    consumer_secret: process.env.TWITTER_CONSUMER_SECRET,
    access_token_key: process.env.TWITTER_ACCESS_KEY,
    access_token_secret: process.env.TWITTER_ACCESS_SECRET,
  });
  db.serialize(function() {
    [{
      name: 'parties',
      params: ['id INTEGER PRIMARY KEY', 'party_name TEXT']
    }, {
      name: 'candidates',
      params: ['id INTEGER PRIMARY KEY', 'candidate_name TEXT', 'party_id INTEGER references parties(id) on update cascade']
    }, {
      name: 'users',
      params: ['id INTEGER PRIMARY KEY', 'screen_name TEXT', 'profile_image TEXT', 'location TEXT', 'preferred_candidate INTEGER references candidates(id)']
    }, {
      name: 'tweets',
      params: ['id INTEGER PRIMARY KEY', 'text TEXT', 'user_id INTEGER references users(id)']
    }, {
      name: 'ratings',
      params: ['tweet_id INTEGER references tweets(id) on update cascade', 'rt_count INTEGER', 'favourite_count INTEGER']
    }].forEach(function(e) {
      db.run('create table if not exists ' + e.name + '( ' + e.params.join(', ') + ');')
    });

    client.stream('statuses/filter', {
      lang: 'en',
      track: process.argv[2]
    }, function(stream) {
      utils.log(p.start + '\nPress CTRL + C to exit.');
      stream.on('data', function(tweet) {
        console.log(tweet);
        var abbr = tweet.user.location ? utils.abbr(tweet.user.location) : false; //valid state
        var filters = process.argv[2].split(',');
        var notRT = filters.some(function(e) {
          return tweet.text.toLowerCase().indexOf(e) > -1; //ensure text contains mentioned filters.
        });
        if (abbr && notRT) {
          utils.log(p.response);
          db.run('insert into tweets values(?, ?, ?)',
            tweet.id,
            tweet.text,
            tweet.user.id,
            function(err, res) {
              if (!err) {
                db.run('insert into ratings values(?, ?, ?)',
                  tweet.id,
                  tweet.retweet_count,
                  tweet._favorite_count,
                  utils.error
                );
                db.run('insert into users values(?, ?, ?, ?, ?)',
                  tweet.user.id,
                  tweet.user.screen_name,
                  tweet.user.profile_image_url,
                  abbr,
                  utils.error
                );

                socket.emit('push', {
                  id: tweet.id_str,
                  location: abbr,
                  screen_name: tweet.user.screen_name,
                  text: tweet.text,
                  user_id: tweet.user.id
                });
              }
            }
          );

        }
      });
      stream.on('error', utils.error);
    });
  });
})(require('twitter'),
  require('sqlite3'),
  require('../utils'),
  require('socket.io-client')
);
require('process').on('SIGINT', function() {
  console.log('\nGoodbye!');
  process.exit();
});
